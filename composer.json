{
	"name": "brightmindedltd/brightminded-coding-standards",
	"type": "phpcodesniffer-standard",
	"description": "PHP_CodeSniffer rules (sniffs) to enforce BrightMinded coding conventions",
	"authors": [
		{
			"name": "BrightMinded Ltd",
			"homepage": "https://brightminded.com/"
		}
	],
	"require": {
		"php": ">=8.0",
		"wp-coding-standards/wpcs": "^3.0.0"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"support": {
		"source": "https://github.com/BrightMindedLtd/BrightMinded-Coding-Standards"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
